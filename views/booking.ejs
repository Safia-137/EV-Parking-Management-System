<!DOCTYPE html>
<html>
<head>
  <title>Book a Slot</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Book a Slot</h1>
    <% if (message.length) { %>
      <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <form action="/booking" method="post" class="mt-4">
      <div class="form-group">
        <label for="startTime">Start Time:</label>
        <input type="datetime-local" class="form-control" name="startTime" required>
      </div>
      <div class="form-group">
        <label for="endTime">End Time:</label>
        <input type="datetime-local" class="form-control" name="endTime" required>
      </div>
      <label for="chargingHours">Charging Hours:</label>
      <input type="number" id="chargingHours" name="chargingHours" step="0.1" required>
      <br>
      <div class="form-group">
        <label for="slot">Select Slot:</label>
        <select class="form-control" name="slot" required>
          <% slots.forEach(slot => { %>
            <option value="<%= slot %>"><%= slot %></option>
          <% }); %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Book Slot</button>
    </form>
  </div>
</body>
</html>
